@Model.PizzaDeliveryApp.Models.Pizza

<form asp-action="ActualizarPizza" method="post">
    <input type="hidden" name="PizzaId" value="@Model.PizzaId" />
    <div>
        <label for="Nombre">Nombre de la Pizza:</label>
        <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" />
    </div>
    <div>
        <label for="Precio">Precio:</label>
        <input type="number" id="Precio" name="Precio" value="@Model.Precio" />
    </div>
    <div>
        <label for="Descripcion">Descripción:</label>
        <textarea id="Descripcion" name="Descripcion">@Model.Descripcion</textarea>
    </div>
    <button type="submit">Actualizar Pizza</button>
</form>

